<Page x:Class="QuizFrontend.CreateNew_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizFrontend"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNew_Page">

    <Grid x:Name="BG" Background="White">
        <Label Content="Topic" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" BorderBrush="#FF060606" Background="{x:Null}" FontSize="24" Height="58" HorizontalContentAlignment="Center">
            <Label.Style>
                <Style/>
            </Label.Style>
        </Label>
        <ComboBox x:Name="aQuestionNumbers" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" Height="47" Width="780"/>
        <Frame x:Name="QuestionFrame" Content="Frame" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Navigated="Frame_Navigated" Height="300" Width="779"/>
        <Button x:Name="xAddQ" Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="xAddQ_Click" Height="29" Width="96"/>
        <Button x:Name="xRemoveQ" Content="Remove" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Click="xRemoveQ_Click" Height="29" Width="95"/>
    </Grid>
</Page>
